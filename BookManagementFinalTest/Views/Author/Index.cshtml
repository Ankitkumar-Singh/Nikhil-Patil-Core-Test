@model PagedList.Core.IPagedList<BookManagementFinalTest.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12 mt-5">
    <div class="text-center">
        <h3>AUTHORS</h3>
        <div class="row mt-3">
            <div class="col-sm-6">
                <pager list="@Model" asp-controller="Author" asp-action="Index"></pager>
            </div>
            <div class="col-sm-6"><a asp-action="Save" class="btn btn-info float-right"><i class="fa fa-plus-circle"></i> Add new</a></div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-borderless table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center text-capitalize">
                            No authors found
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-capitalize">@item.Firstname @item.Lastname</td>

                            <td>@item.Email</td>

                            <td>@item.Contact</td>

                            <td>
                                <a asp-action="Save" asp-route-id="@item.Id"><i class="text-primary fa fa-pencil-square-o mr-2"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="text-info fa fa-info-circle mr-2"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="text-danger fa fa-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>