@model BookManagementFinalTest.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-6 offset-md-3 mt-5">
    <div class="shadow">
        <div class="text-center text-danger my-2">
            <h4>Are you sure you want to delete @Model.Firstname @Model.Lastname?</h4>
        </div>
        <div class="card-body">
            <h3 class="text-capitalize text-center text-primary my-3">@Model.Firstname @Model.Lastname</h3>
            <dl class="row">
                <dt class="col-sm-4">Email</dt>
                <dt class="col-sm-1">:</dt>
                <dd class="col-sm-7">@Model.Email</dd>

                <dt class="col-sm-4">Contact</dt>
                <dt class="col-sm-1">:</dt>
                <dd class="col-sm-7">@Model.Contact</dd>

                <dt class="col-sm-4">Date added</dt>
                <dt class="col-sm-1">:</dt>
                <dd class="col-sm-7">@Model.RegisterDate</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger float-right" id="btnDeleteAuthor" />
                <a asp-action="Index" class="btn btn-info">Cancel</a>
            </form>
        </div>
    </div>
</div>